<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/add_button"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="20dp"
            android:text="@string/add_city"
            app:layout_constraintBottom_toTopOf="@+id/city_list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/delete_city"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:text="@string/delete_city"
            app:layout_constraintBottom_toTopOf="@+id/city_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.8" />

    </LinearLayout>

    <ListView
        android:id="@+id/city_list"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ListView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/add_city_input"
            android:layout_width="227dp"
            android:layout_height="42dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="25dp"
            android:autofillHints=""
            android:inputType="text"
            android:hint="@string/enter_city_to_add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/city_list"
            app:layout_constraintVertical_bias="0.264">

        </EditText>

        <Button
            android:id="@+id/add_confirmation"
            android:layout_width="127dp"
            android:layout_height="43dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="24dp"
            android:text="@string/confirm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/add_city_input"
            app:layout_constraintTop_toBottomOf="@+id/city_list">

        </Button>
    </LinearLayout>



</LinearLayout>